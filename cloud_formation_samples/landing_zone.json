{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "NewAccount": {
            "Type": "AWS::Organizations::Account",
            "DeletionPolicy": "Delete",
            "Properties": {
                "AccountName": {"Ref": "AccountName"},
                "Email": {"Ref": "Email"},
                "ParentIds" : {"Ref": "ParentIds"}
            }
        }
    },
    "Parameters": {
        "AccountName": {
            "Type": "String",
            "Description": "Name of the account to create"
        },
        "Email": {
            "Type": "String",
            "Description": "Email address of the account to create"
        },
        "ParentIds": {
            "Type": "List<AWS::Organizations::Account::Id>",
            "Description": "List of IDs of the parent accounts to attach the new account to"
        }
    },
    "Outputs": {
        "AccountId": {
            "Value": {
                "Ref": "NewAccount"
            }
        }
    }
}